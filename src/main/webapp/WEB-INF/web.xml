<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>AfficherAnimalServlet</servlet-name>
        <servlet-class>control.AfficherAnimalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AfficherAnimalServlet</servlet-name>
        <url-pattern>AfficherAnimalServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AfficherPanierServlet</servlet-name>
        <servlet-class>control.AfficherPanierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AfficherPanierServlet</servlet-name>
        <url-pattern>/AfficherPanierServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AjouterAnimalServlet</servlet-name>
        <servlet-class>control.AjouterAnimalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjouterAnimalServlet</servlet-name>
        <url-pattern>/AjouterAnimalServlet</url-pattern>
    </servlet-mapping>



    <welcome-file-list>
        <welcome-file>acceuil.jsp</welcome-file>
        <welcome-file>acceuil.html</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
            <taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
        </taglib>
    </jsp-config>


</web-app>
